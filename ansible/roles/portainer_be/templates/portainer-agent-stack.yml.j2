version: '3.2'

services:
  agent:
    image: portainer/agent:{{ portainer_agent_image_version }}
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /var/lib/docker/volumes:/var/lib/docker/volumes
    networks:
      - agent_network
    deploy:
      mode: global
      placement:
        constraints: [node.platform.os == linux]

  portainer:
    image: portainer/portainer-ee:{{ portainer_image_version }}
    command: -H tcp://tasks.agent:{{ portainer_agent_port }} --tlsskipverify
    ports:
      - "{{ portainer_https_port }}:9443"
      - "{{ portainer_http_port }}:9000"
      - "8000:8000"
    volumes:
      - portainer_data:/data
      - /var/run/docker.sock:/var/run/docker.sock
    networks:
      - agent_network
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints:
          - node.hostname == {{ portainer_constraint_node_hostname }}

networks:
  agent_network:
    driver: overlay
    attachable: true

volumes:
  portainer_data:
